@using ECAuth.Models.ManageViewModels
@using ECAuth.Views.Manage
@using Microsoft.Extensions.Options;
@inject IOptions<MyConfig> OptionsApplicationConfiguration


@model ECAuth.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div class="alert alert-success alert-dismissible" role="alert">
                Operación realizada correctamente.
            </div>
            <input asp-for="ReturnUrl" type="hidden" />

            <div class="button-actions">
                <a class="btn btn-default" href="@OptionsApplicationConfiguration.Value.URLHomeExternalApp"> <i class="ic-ok"></i>Continuar</a>
            </div>
        </form>


    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
